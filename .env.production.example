# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES - TEMPLATE
# =============================================================================
# Copy this to .env and fill in your actual values
# NEVER commit .env file - it should be in .gitignore
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0
NEXT_TELEMETRY_DISABLED=1

# -----------------------------------------------------------------------------
# DATABASE - PostgreSQL
# -----------------------------------------------------------------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://user:password@localhost:5432/mobile_repair_db
DIRECT_URL=postgresql://user:password@localhost:5432/mobile_repair_db

# -----------------------------------------------------------------------------
# REDIS - Caching & Rate Limiting
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 64
JWT_SECRET=REPLACE_WITH_64_CHAR_HEX
REFRESH_TOKEN_SECRET=REPLACE_WITH_64_CHAR_HEX

# Token expiry
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# OPTIONAL INTEGRATIONS
# -----------------------------------------------------------------------------
# Lightspeed POS
LIGHTSPEED_ENABLED=false
LIGHTSPEED_ACCOUNT_ID=
LIGHTSPEED_API_KEY=
LIGHTSPEED_API_SECRET=

# Twilio SMS
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SendGrid Email
SENDGRID_ENABLED=false
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# -----------------------------------------------------------------------------
# BUSINESS SETTINGS
# -----------------------------------------------------------------------------
BUSINESS_NAME=Mobile Repair Shop
BUSINESS_EMAIL=info@example.com
BUSINESS_PHONE=+1234567890
TAX_RATE=0.1
CURRENCY=USD

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
SMART_PRICING_ENABLED=true
PRICING_CONFIDENCE_THRESHOLD=80
