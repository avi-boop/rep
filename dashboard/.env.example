# =============================================================================
# MOBILE REPAIR DASHBOARD - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update with your actual values
# For Coolify deployment, set these in the Coolify dashboard

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# For Coolify: Use the connection string provided by Coolify PostgreSQL service
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://repair_admin:password@postgres:5432/mobile_repair_db"
DIRECT_URL="postgresql://repair_admin:password@postgres:5432/mobile_repair_db"

# =============================================================================
# REDIS (Caching & Sessions)
# =============================================================================
# For Coolify: Use the connection string provided by Coolify Redis service
# Format: redis://HOST:PORT
REDIS_URL="redis://redis:6379"
REDIS_PASSWORD=""

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# CRITICAL: Generate strong secrets using: openssl rand -hex 64
# These MUST be unique and secure in production

# JWT Secret (minimum 64 characters) - GENERATE WITH: openssl rand -hex 64
JWT_SECRET="REPLACE_WITH_openssl_rand_hex_64_OUTPUT"

# Refresh Token Secret (minimum 64 characters) - GENERATE WITH: openssl rand -hex 64
REFRESH_TOKEN_SECRET="REPLACE_WITH_openssl_rand_hex_64_OUTPUT"

# Token expiration
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Session secret (for fallback/additional security)
SESSION_SECRET="change-this-to-a-random-string-min-32-chars"

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV="production"
PORT=3000
HOSTNAME="0.0.0.0"
NEXT_TELEMETRY_DISABLED=1

# Base URL (for production deployment)
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# =============================================================================
# INTEGRATIONS (Optional)
# =============================================================================
# Only configure these if you're using these services

# Lightspeed POS Integration
LIGHTSPEED_API_KEY=""
LIGHTSPEED_ACCOUNT_ID=""
LIGHTSPEED_PERSONAL_TOKEN=""
LIGHTSPEED_API_URL="https://api.lightspeedapp.com"

# Google Gemini AI (for pricing intelligence)
GEMINI_API_KEY=""
GEMINI_API_URL="https://generativelanguage.googleapis.com/v1beta"

# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# SendGrid (Email Notifications)
SENDGRID_API_KEY=""
FROM_EMAIL="noreply@yourshop.com"
FROM_NAME="Your Repair Shop"

# =============================================================================
# RATE LIMITING
# =============================================================================
# Login attempts before temporary lockout
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL="info"

# Sentry (Error Tracking - Optional)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="production"

# =============================================================================
# NOTES FOR COOLIFY DEPLOYMENT
# =============================================================================
# 1. Generate new JWT secrets:
#    openssl rand -hex 64
#    openssl rand -hex 64
#
# 2. DATABASE_URL will be provided by Coolify PostgreSQL service
#    Format: postgresql://USER:PASSWORD@SERVICE_NAME:5432/DATABASE
#
# 3. REDIS_URL will be provided by Coolify Redis service
#    Format: redis://SERVICE_NAME:6379
#
# 4. Set NODE_ENV=production for production deployment
#
# 5. All secrets should be set in Coolify's environment variables UI
#    NEVER commit .env files with real secrets to git
