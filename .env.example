# .env.example
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://admin:changeme@localhost:5432/repair_shop_db
DB_PASSWORD=changeme

# For Docker Compose
# DATABASE_URL=postgresql://admin:changeme@postgres:5432/repair_shop_db

# ===========================================
# REDIS CACHE
# ===========================================
REDIS_URL=redis://:changeme@localhost:6379
REDIS_PASSWORD=changeme

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ===========================================
# TWILIO (SMS Notifications)
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# SENDGRID (Email Notifications)
# ===========================================
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourrepairshop.com
SENDGRID_FROM_NAME=Your Repair Shop

# ===========================================
# LIGHTSPEED POS INTEGRATION
# ===========================================
LIGHTSPEED_API_KEY=your_lightspeed_api_key
LIGHTSPEED_ACCOUNT_ID=your_lightspeed_account_id
LIGHTSPEED_CLIENT_ID=your_lightspeed_client_id
LIGHTSPEED_CLIENT_SECRET=your_lightspeed_client_secret
LIGHTSPEED_REDIRECT_URI=http://localhost:5000/api/v1/lightspeed/callback

# ===========================================
# FILE UPLOAD
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:3000
# For production, use your domain:
# CORS_ORIGIN=https://yourrepairshop.com

# ===========================================
# FRONTEND (React)
# ===========================================
REACT_APP_API_URL=http://localhost:5000/api/v1
REACT_APP_WS_URL=ws://localhost:5000

# For production:
# REACT_APP_API_URL=https://api.yourrepairshop.com/api/v1
# REACT_APP_WS_URL=wss://api.yourrepairshop.com

# ===========================================
# PGADMIN (Development Only)
# ===========================================
PGADMIN_PASSWORD=admin

# ===========================================
# SECURITY
# ===========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=10

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===========================================
# FEATURES FLAGS
# ===========================================
ENABLE_SMART_PRICING=true
ENABLE_NOTIFICATIONS=true
ENABLE_LIGHTSPEED_SYNC=false
ENABLE_AUTO_NOTIFICATIONS=true

# ===========================================
# BUSINESS SETTINGS
# ===========================================
SHOP_NAME=Mobile Repair Shop
SHOP_ADDRESS=123 Main Street, City, State 12345
SHOP_PHONE=(555) 123-4567
SHOP_EMAIL=info@yourrepairshop.com
SHOP_TIMEZONE=America/New_York
CURRENCY=USD
DEFAULT_WARRANTY_DAYS=90

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
# When to send automatic notifications
AUTO_NOTIFY_ON_CREATE=true
AUTO_NOTIFY_ON_STATUS_CHANGE=true
AUTO_NOTIFY_ON_COMPLETION=true
PICKUP_REMINDER_HOURS=24

# ===========================================
# SMART PRICING SETTINGS
# ===========================================
MIN_CONFIDENCE_SCORE=40
PRICE_ADJUSTMENT_FACTOR=0.08
DEFAULT_PROFIT_MARGIN=0.40

# ===========================================
# BACKUP
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# ===========================================
# MONITORING (Optional)
# ===========================================
# SENTRY_DSN=your_sentry_dsn
# GOOGLE_ANALYTICS_ID=your_ga_id

# ===========================================
# SOCIAL/REVIEW LINKS (Optional)
# ===========================================
GOOGLE_REVIEW_LINK=https://g.page/your-business/review
FACEBOOK_PAGE=https://facebook.com/yourrepairshop
INSTAGRAM_HANDLE=yourrepairshop

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
DEBUG=false
MOCK_SMS=false
MOCK_EMAIL=false

# ===========================================
# NOTES:
# ===========================================
# 1. Generate strong JWT_SECRET:
#    node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
#
# 2. Get Twilio credentials:
#    https://console.twilio.com/
#
# 3. Get SendGrid API key:
#    https://app.sendgrid.com/settings/api_keys
#
# 4. Lightspeed API access:
#    https://developers.lightspeedhq.com/
#
# 5. For production, use environment variables or secrets manager
#    instead of .env file
#
# 6. Always use HTTPS in production
#
# 7. Set strong passwords for database and Redis
#
