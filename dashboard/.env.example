# Database
DATABASE_URL="postgresql://user:password@localhost:5432/repair_shop_db?schema=public"

# App
NEXTAUTH_SECRET="your-secret-key-change-this"
NEXTAUTH_URL="http://localhost:3000"

# JWT Authentication (minimum 32 characters)
JWT_SECRET="your-32-character-minimum-jwt-secret-change-this"
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_SECRET="your-32-character-minimum-refresh-token-secret-change-this"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Environment
NODE_ENV="development"

# Twilio (SMS)
TWILIO_ACCOUNT_SID="your_twilio_sid"
TWILIO_AUTH_TOKEN="your_twilio_token"
TWILIO_PHONE_NUMBER="+1234567890"

# SendGrid (Email)
SENDGRID_API_KEY="your_sendgrid_key"
FROM_EMAIL="noreply@yourshop.com"

# Lightspeed (Optional)
LIGHTSPEED_API_KEY="your_lightspeed_key"
LIGHTSPEED_ACCOUNT_ID="your_account_id"
LIGHTSPEED_API_URL="https://api.lightspeedapp.com"
