{
  "name": "repair-shop-backend",
  "version": "1.0.0",
  "description": "Mobile Repair Shop Dashboard - Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "node scripts/migrate.js",
    "migrate:undo": "node scripts/migrate.js --undo",
    "seed": "node scripts/seed.js",
    "seed:undo": "node scripts/seed.js --undo",
    "db:reset": "npm run migrate:undo && npm run migrate && npm run seed",
    "generate:prices": "node scripts/generatePrices.js",
    "backup:db": "node scripts/backup.js",
    "clear:cache": "node scripts/clearCache.js"
  },
  "keywords": [
    "repair",
    "shop",
    "dashboard",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "sequelize": "^6.35.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "socket.io": "^4.6.2",
    "redis": "^4.6.11",
    "ioredis": "^5.3.2",
    "twilio": "^4.19.0",
    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "date-fns": "^2.30.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "csv-parse": "^5.5.3",
    "csv-stringify": "^6.4.4",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.1",
    "@faker-js/faker": "^8.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  }
}
