# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES FOR COOLIFY
# =============================================================================
# Set these in Coolify Dashboard → Application → Environment Variables

# Database (from Coolify PostgreSQL service)
DATABASE_URL=postgresql://repair_admin:[PASSWORD]@mobile-repair-db:5432/mobile_repair_db
DIRECT_URL=postgresql://repair_admin:[PASSWORD]@mobile-repair-db:5432/mobile_repair_db

# Redis (from Coolify Redis service)
REDIS_URL=redis://repair-redis:6379

# Authentication (generate with: openssl rand -hex 64)
JWT_SECRET=[GENERATE_UNIQUE_64_CHAR_HEX]
REFRESH_TOKEN_SECRET=[GENERATE_UNIQUE_64_CHAR_HEX]
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Application
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0
NEXT_TELEMETRY_DISABLED=1
