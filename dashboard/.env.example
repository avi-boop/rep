# ===============================================
# Mobile Repair Dashboard - Environment Variables
# ===============================================
#
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
#

# ==========================================
# DATABASE (Required)
# ==========================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/repair_shop_db?schema=public"

# Direct database URL (for Prisma migrations)
DIRECT_URL="postgresql://user:password@localhost:5432/repair_shop_db?schema=public"

# Supabase (if using Supabase)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"


# ==========================================
# AUTHENTICATION (Required)
# ==========================================
# NextAuth secret key (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-at-least-32-characters-long"

# NextAuth URL (your app URL)
NEXTAUTH_URL="http://localhost:3000"


# ==========================================
# SECURITY (Required)
# ==========================================
# Encryption key for device passwords (generate with: openssl rand -base64 32)
ENCRYPTION_KEY="your-encryption-key-at-least-32-characters"


# ==========================================
# SMS NOTIFICATIONS (Optional)
# ==========================================
# Twilio credentials for SMS
TWILIO_ACCOUNT_SID="your_twilio_sid"
TWILIO_AUTH_TOKEN="your_twilio_token"
TWILIO_PHONE_NUMBER="+1234567890"


# ==========================================
# EMAIL NOTIFICATIONS (Optional)
# ==========================================
# SendGrid API key
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
FROM_EMAIL="noreply@theprofitplatform.com.au"


# ==========================================
# LIGHTSPEED POS INTEGRATION (Optional)
# ==========================================
LIGHTSPEED_API_KEY="your_lightspeed_key"
LIGHTSPEED_ACCOUNT_ID="your_account_id"
LIGHTSPEED_API_URL="https://api.lightspeedapp.com"
LIGHTSPEED_DOMAIN_PREFIX="your_domain"
LIGHTSPEED_API_TOKEN="your_lightspeed_token"


# ==========================================
# AI PRICING (Optional)
# ==========================================
# Google Gemini API
GEMINI_API_KEY="your_gemini_api_key"
GEMINI_API_URL="https://generativelanguage.googleapis.com/v1beta"


# ==========================================
# CACHING & RATE LIMITING (Optional)
# ==========================================
# Redis connection string
REDIS_URL="redis://localhost:6379"

# OR Upstash Redis (cloud)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_upstash_token"


# ==========================================
# MONITORING (Optional)
# ==========================================
# Sentry error tracking
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"


# ==========================================
# STORAGE (Optional)
# ==========================================
# Supabase Storage (for repair photos)
SUPABASE_SERVICE_KEY="your_supabase_service_key"

# OR AWS S3
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_S3_BUCKET="your-bucket-name"
AWS_REGION="us-east-1"


# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV="development"
PORT="3000"

# Log level (debug, info, warn, error)
LOG_LEVEL="info"

# Backup retention (days)
RETENTION_DAYS="30"


# ==========================================
# NOTES
# ==========================================
#
# To generate secure secrets:
#   openssl rand -base64 32
#
# To validate your environment:
#   npm run validate:env
#
# To backup database:
#   npm run db:backup
#
# To restore database:
#   npm run db:restore backups/your-backup.sql.gz
#
