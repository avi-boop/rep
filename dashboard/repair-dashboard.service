[Unit]
Description=Repair Dashboard Next.js Application
After=network.target

[Service]
Type=simple
User=avi
WorkingDirectory=/home/avi/projects/mobile/rep/repair-dashboard
Environment="NODE_ENV=production"
Environment="PORT=3003"
ExecStart=/usr/bin/npm start
Restart=always
RestartSec=10
StandardOutput=append:/home/avi/projects/mobile/rep/repair-dashboard/logs/production.log
StandardError=append:/home/avi/projects/mobile/rep/repair-dashboard/logs/production-error.log

[Install]
WantedBy=multi-user.target
